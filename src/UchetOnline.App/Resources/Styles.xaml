<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:UchetOnline.App.ViewModels">
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource SecondaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style TargetType="ListBoxItem">
        <Setter Property="Margin" Value="0,2" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="Border"
                            CornerRadius="8"
                            Background="Transparent">
                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate DataType="{x:Type vm:BaseModuleViewModel}">
        <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="24">
            <StackPanel>
                <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="SemiBold" />
                <TextBlock Text="{Binding Description}" Foreground="{StaticResource MutedTextBrush}" Margin="0,8,0,24" />
                <TextBlock Text="Раздел находится в разработке." Foreground="{StaticResource MutedTextBrush}" />
            </StackPanel>
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:InventoryViewModel}">
        <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="24">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="Склад" FontSize="24" FontWeight="SemiBold" />
                    <Button Content="Обновить" Margin="16,0,0,0" Command="{Binding LoadDataCommand}" />
                </StackPanel>
                <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" CanUserAddRows="False"
                          HeadersVisibility="Column" RowHeight="32">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Номенклатура" Binding="{Binding Name}" Width="*" />
                        <DataGridTextColumn Header="Склад" Binding="{Binding Warehouse.Name}" Width="2*" />
                        <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="Auto" />
                        <DataGridTextColumn Header="Доступно" Binding="{Binding Quantity}" Width="Auto" />
                        <DataGridTextColumn Header="Резерв" Binding="{Binding ReservedQuantity}" Width="Auto" />
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
        <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="24">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="Отчёты" FontSize="24" FontWeight="SemiBold" />
                    <Button Content="Обновить" Margin="16,0,0,0" Command="{Binding RefreshCommand}" />
                </StackPanel>
                <ItemsControl ItemsSource="{Binding Reports}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8" Padding="16" Background="#FFF7F9FC" CornerRadius="8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Description}" Foreground="{StaticResource MutedTextBrush}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Text="Если список пуст, добавьте отчёт через БД." Foreground="{StaticResource MutedTextBrush}" Margin="0,16,0,0" />
            </StackPanel>
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ChesnyZnakViewModel}">
        <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="24">
            <StackPanel>
                <TextBlock Text="Честный Знак" FontSize="24" FontWeight="SemiBold" />
                <TextBlock Text="Интеграция в демонстрационном режиме." Margin="0,8,0,16" Foreground="{StaticResource MutedTextBrush}" />
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBox Width="200" Text="{Binding Gtin, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Отправить запрос" Margin="12,0,0,0" Command="{Binding SendRequestCommand}" />
                </StackPanel>
                <TextBlock Text="{Binding Response}" TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>
